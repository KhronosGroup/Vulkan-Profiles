    "capabilities": {
        "macos-specific": {
            "extensions": {
                "VK_KHR_portability_subset": 1
            },
            "features": {
                "VkPhysicalDevicePortabilitySubsetFeaturesKHR": {
                    "vertexAttributeAccessBeyondStride": true,
